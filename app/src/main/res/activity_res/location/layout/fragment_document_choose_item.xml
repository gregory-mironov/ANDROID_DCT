<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/f_document_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_view_horizontal_margin"
        android:layout_marginTop="@dimen/card_view_vertical_margin"
        android:textColor="@color/item_recycled_title"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/f_document_item_basis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_view_horizontal_margin"
        android:layout_marginTop="@dimen/card_view_vertical_margin"
        android:textColor="@color/item_recycled_subtitle"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_document_item_number" />

    <TextView
        android:id="@+id/f_document_item_auditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_view_horizontal_margin"
        android:layout_marginTop="@dimen/card_view_vertical_margin"
        android:textColor="@color/item_recycled_subtitle"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_document_item_basis" />

    <TextView
        android:id="@+id/f_document_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_view_vertical_margin"
        android:layout_marginEnd="@dimen/card_view_horizontal_margin"
        android:textColor="@color/item_recycled_subtitle"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_document_item_basis" />

</androidx.constraintlayout.widget.ConstraintLayout>
