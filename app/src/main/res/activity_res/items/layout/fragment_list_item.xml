<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/f_items_item_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="@string/label_item_image"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/f_items_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textColor="@color/item_recycled_title"
        android:textIsSelectable="true"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/f_items_item_image"
        app:layout_constraintTop_toTopOf="@+id/f_items_item_image" />

    <TextView
        android:id="@+id/f_items_item_barcode_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_recycled_subtitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/f_items_item_title"
        app:layout_constraintTop_toBottomOf="@+id/f_items_item_title" />

    <TextView
        android:id="@+id/f_items_item_rfid_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:textColor="@color/item_recycled_subtitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_items_item_title" />
</androidx.constraintlayout.widget.ConstraintLayout>